datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  whishlist Whishlist[]
  name      String?
}

model Whishlist {
  id            Int         @id @default(autoincrement())
  author        User        @relation(fields: [authorId], references: [id])
  authorId      Int
  whistListName String
  whishlistItem WhistItem[]
  dueDate       DateTime
  belongsToUser Boolean
}

model WhistItem {
  id          Int       @id @default(autoincrement())
  title       String
  priority    Int       @default(autoincrement())
  whishlist   Whishlist @relation(fields: [whishlistId], references: [id])
  whishlistId Int
  description String?
  link        String?
}
